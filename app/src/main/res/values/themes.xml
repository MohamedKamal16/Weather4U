<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Weather4U" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0587E9</item>
        <item name="colorPrimaryVariant">@color/CrayolaBlue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#80BAE6</item>
        <item name="colorSecondaryVariant">@color/CrayolaBlue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Weather4U.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Weather4U.AppBarOverlay" parent="Theme.AppCompat.DayNight"/>
   
    <style name="Theme.Weather4U.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>